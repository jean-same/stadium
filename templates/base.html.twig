<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
										        and uncomment the following Encore helpers to start using Symfony UX #}
		<link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
	</head>
	<body>

		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{path('api_v1_docs_home')}}">Stadium</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a {% if app.request.get('_route') ends with 'home' %} class="nav-link active" aria-current="page" {% else %} class="nav-link" href="{{path('api_v1_docs_home')}}" {% endif %}>Home
							</a>
						</li>
						<li class="nav-item">
							<a {% if app.request.get('_route') ends with 'superadmin' %} class="nav-link active" aria-current="page" {% else %} class="nav-link" href="{{path('api_v1_docs_superadmin')}}" {% endif %}>SuperAdmin</a>
						</li>
						<li class="nav-item">
							<a {% if app.request.get('_route') ends with '_admin' %} class="nav-link active" aria-current="page" {% else %} class="nav-link" href="{{path('api_v1_docs_admin')}}" {% endif %}>Admin</a>
						</li>
						<li class="nav-item">
							<a {% if app.request.get('_route') ends with 'member' %} class="nav-link active" aria-current="page" {% else %} class="nav-link" href="{{path('api_v1_docs_member')}}" {% endif %}>Member</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		{% block body %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	</body>
</html>
