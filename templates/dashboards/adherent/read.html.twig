{% extends 'baseDashboardAdherent.html.twig' %}

{% block title %}Profil Home!
{% endblock %}

{% block body %}

	<div id="main">

		<header class="mb-3">
			<a href="#" class="burger-btn d-block d-xl-none default-color">
				<i class="fa fa-bars fs-3" aria-hidden="true"></i>
			</a>
		</header>

		<div class="row my-5">
			<div class="col-lg-8 row" id="div-left-rubriques">
				<div class="card col-sm-6 card-profile-home card-width">
					{%  include "dashboards/adherent/_rubriques_partials/_events_profile_home.html.twig" with {
					'title' : 'Evènements',
					'variableToUse' : profile.association.events
				} %}
				</div>
				<div class="card col-sm-6 card-profile-home card-width">
					{%  include "dashboards/adherent/_rubriques_partials/_events_profile_home.html.twig" with {
					'title' : 'Mes évènements',
					'variableToUse' : profile.event
				} %}
				</div>
				<div class="card col-sm-6 card-profile-home card-width">
					{%  include "dashboards/adherent/_rubriques_partials/_activities_profile_home.html.twig" with {
					'title' : 'Activités',
					'variableToUse' : profile.association.activities
				} %}
				</div>
				<div class="card col-sm-6 card-profile-home card-width">
					{%  include "dashboards/adherent/_rubriques_partials/_activities_profile_home.html.twig" with {
					'title' : 'Mes activités',
					'variableToUse' : profile.activity
				} %}
				</div>
			</div>

		</div>

	</div>
{% endblock %}
