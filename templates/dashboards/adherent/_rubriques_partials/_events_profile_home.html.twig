<div class="card-header">
	<h3 class="text-center">
		{{title}}
	</h3>
</div>

{% set events = variableToUse %}
<div class="card-body div-carousel-card-body">
	<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-inner">
			{% for key ,event in events %}
				{% set nbPlacesLeft = event.maxParticipants - event.profiles | length %}
				<div class="carousel-item {% if key == 0 %} active {% endif %}">
					<img src="https://picsum.photos/400" class="d-block w-100" alt="...">
					<div class="carousel-caption carousel-body-caption d-md-block">
						<h5>{{event.name}}</h5>
						<p>{{event.startDate  | date("d-m-Y") }}</p>
						<p class="card-text">
							{% if nbPlacesLeft <= 0  %}
								<span class="badge second-color-background">Complet</span>
							{% else %}
								<span class="text-bold-500 badge bg-{{ nbPlacesLeft > 10 ? 'success' : 'danger' }}">
									{{ nbPlacesLeft }}
									places libre
								</span>
							{% endif %}
						</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
