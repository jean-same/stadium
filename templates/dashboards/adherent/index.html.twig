{% extends 'baseDashboardAdherent.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div id="main">
		<h1 class="text-center">Profils</h1>
		<section class="profiles">
			<div class="row">
				{% for profil in user.profil %}
					<div class="card col-3 p-0 profil-card-body">
						<img class="img-fluid profil-card-body-picture" src="{{ asset('pictures/profilPicture/')~ profil.picture }}" alt=" card image cap">
						<div class="card-content">
							<div class="card-body profil-card-body-adherent">
								<p class="card-text">
									<span class="text-bold-500">Nom :
									</span>
									{{ profil.lastName }}
								</p>
								<p class="card-text">
									<span class="text-bold-500">Prenom :
									</span>
									{{ profil.firstName }}
								</p>
								{% if profil.association %}
									<p class="card-text">
										<span class="text-bold-500">Association :
										</span>
										<span class="badge bg-primary">{{ profil.association.name }}</span>
									</p>
								{% endif %}
							</div>
						</div>
						<div class="card-footer d-flex justify-content-between">
							<a href="{{ path('dashboards_adherent_read', { slug : profil.slug }) }}" class="btn btn-primary">
								<i class="fas fa-eye"></i>
							</a>
							<a href="{{ path('dashboards_adherent_edit', { slug : profil.slug }) }}" class="btn btn-warning">
								<i class="fas fa-edit"></i>
							</a>
							<a href="" class="btn btn-danger">
								<i class="fas fa-trash"></i>
							</a>
						</div>
					</div>
				{% else %}
					<h3>Pensez à créer votre premier profil</h3>
				{% endfor %}
			</div>
		</section>
		<section class="new-profile-section">
			<div class="formProfil-adherent">
				<h1 class="text-center">Nouveau profil</h1>
				{%  include "dashboards/adherent/_forms/_newProfileForm.html.twig"  %}
			</div>
		</section>
	</div>

{% endblock %}
