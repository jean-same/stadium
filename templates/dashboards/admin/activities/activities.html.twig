{% extends 'baseDashboardAdmin.html.twig' %}

{% block title %}Hello ActivitiesController!
{% endblock %}

{% block body %}

	<div id="main">

		<header class="mb-3">
			<a href="#" class="burger-btn d-block d-xl-none">
				<i class="fa fa-bars fs-3" aria-hidden="true"></i>
			</a>
		</header>
		<section id="basic-vertical-layouts">
			<div class="row match-height">
				<div class="col-md-9 col-12">
					<div class="white-background border-radius-default padding-bottom-default row">
						<h1 class="title-adherent-pages">
							Vos activités
						</h1>
						<div class="activities-page-member">
							{% for activity in activities %}

								<div class="box-container-activity">
									<div class="box-activity box-body-activity">
										<img src="{{ asset('pictures/activity/')~ activity.picture }}" alt="">
										<div class="caption">
											<div class="content">
												<span>{{activity.name}}</span>

											</div>
											<div class=" d-flex justify-content-between">
												<a href="{{ path('dashboards_admin_activities_edit', { id : activity.id }) }}" class="btn bg-warning text-white mx-2">
													<i class="fas fa-edit"></i>
												</a>
												<a href="{{ path('dashboards_admin_activities_delete', { id : activity.id }) }}" class="btn bg-danger text-white mx-2">
													<i class="fas fa-trash"></i>
												</a>
											</div>
										</div>
									</div>
								</div>

								{% else %}

							{% endfor %}
						</div>
					</div>
				</div>
				<div class="col-md-3 col-12">
					<div class="card">
						<div class="card-header">
							<h4 class="card-title">Ajouter une activité</h4>
						</div>
						<div class="card-content">
							<div class="card-body">
								{{ form_start(formActivity , {'attr': {'novalidate': 'novalidate' , 'class' : 'form form-vertical' } }) }}
								<div class="form-body">
									<div class="row">
										<div class="col-12">
											<div class="form-group">
												{{ form_row(formActivity.name) }}
											</div>
										</div>
										<div class="col-12">
											<div class="form-group">
												{{ form_row(formActivity.picture) }}
											</div>
										</div>
										<div class="col-12 d-flex justify-content-between">
											<button type="reset" class="btn btn-light-secondary me-1 mb-1">Vider les champs</button>
											<button type="submit" class="btn btn-primary me-1 mb-1">Soumettre</button>
										</div>
									</div>
								</div>
								{{ form_end(formActivity) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>

{% endblock %}
